<% if @categories.empty? %>
	<p>No Categories Found</p>
<% else %>
	<h2>Listing Categories</h2>
	<ul>
		<% @categories.each do |category| %>
			<li>
				<b>Name : </b><%= link_to category["name"], category_path(category["id"]) %>
				<%#= link_to "Show", category_path(category["id"]) %>
			</li>
		<% end %>
	</ul>
<% end %>

<%= link_to "Add Category", new_category_path %>
